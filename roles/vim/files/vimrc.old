" Stops odd issues
set nocompatible

" Sets how many lines of history VIM has to remember
set history=10

set noswapfile

" Set to auto read when a file is changed from the outside
set autoread
au FocusGained,BufEnter * checktime

syntax on

" Turn on command line completion (:<something> + <Tab>)
set wildmenu

set visualbell
set number
set hlsearch
set encoding=utf-8
set tabstop=2
set softtabstop=2
set shiftwidth=2
set smarttab
set expandtab
set wrap
set showmatch
set incsearch
set autoindent
set smartindent
set fileformat=unix
" Autoset UTF-8 file encoding when opening a file
set fencs=utf-8
set relativenumber

autocmd FileType make setlocal noexpandtab
autocmd BufNewFile,BufRead Vagrantfile set filetype=ruby

" Autodelete .netrwhist because it is so annoying and seems useless
au VimLeave * if filereadable("[path here]/.netrwhist")|call delete("[path here]/.netrwhist")|endif
